<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_student_test_tree" model="ir.ui.view">
            <field name="name">student.test.tree</field>
            <field name="model">student.test</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code" string="Student code"/>
                    <field name="name" string="Student Name"/>
                    <field name="age" string="Age"/>
                    <field name="gender" string="Gender"/>
                    <field name="address"/>
                    <field name="ranking"/>
                    <field name="has_experience"/>
                    <field name="avatar"/>
                    <field name="introduce"/>
                    <field name="logo"/>
                    <field name="currency_id"/>
                    <field name="class_fund"/>
                    <field name="date_of_birth"/>
                    <field name="attendance_time_start"/>
                    <field name="order_lines"/>
                    <field name="total_score"/>                              
                </tree>            
            </field>
        </record>        

        <record id="view_student_test_form" model="ir.ui.view">
            <field name="name">student.test.form</field>
            <field name="model">student.test</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Name Student" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="Name Student"/></h1>
                            <label for="code"/>
                            <h3><field name="code"/></h3>
                        </div>
                        <group name="images">
                            <group>
                                <field name="address"/>
                                <field name="age"/>
                                <field name="ranking"/>
                            </group>
                            <group>
                                <field name="date_of_birth"/>
                                <field name="gender"/>
                            </group>                            
                        </group>
                        <notebook>
                            <page name="general_information" string="General Information">
								<group>
									<group>
										<field name="has_experience"/>
									</group>
									<group>
										<label for="introduce" colspan="2"/>
										<field name="introduce" colspan="2" nolabel="1"/>
									</group>
								</group>
							</page>
							<page name="additional_information" string="Additional Information">
								<group>
									<group string="Images">
                                        <field name="avatar" string="avatar" widget="image"/>
										<field name="logo" string="logo" widget="image"/>
									</group>
									<group>
										<field name="currency_id" widget="Many2one_tags"/>
									</group>
                                    <group>
										<field name="currency_id"/>
                                        <field name="class_fund"/>                                        
                                        <field name="attendance_time_start"/>
                                        <field name="order_lines"/>
                                        <field name="total_score"/>
									</group>
								</group>
							</page>							
						</notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_student_test_kanban" model="ir.ui.view">
            <field name="name">student.test.kanban</field>
            <field name="model">student.test</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="code" string="Student code"/>
                    <field name="name" string="Student Name"/>
                    <field name="age" string="Age"/>
                    <field name="gender" string="Gender"/>
                    <field name="address"/>
                    <field name="ranking"/>
                    <field name="has_experience"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card">
                                <div class="oe_kanban_card_header">
                                    <div class="oe_kanban_card_title">
                                        Name: <field name="name"/>
                                    </div>
                                    <div class="oe_kanban_card_subtitle">
                                        Code: <field name="code"/>
                                    </div>
                                </div>
                                <div class="oe_kanban_card_content">
                                    <div>Age: <field name="age" string="age"/></div>
                                    <div>Gender: <field name="gender" string="gender"/></div>
                                    <div>Andress: <field name="address"/></div>
                                    <div>Ranking: <field name="ranking"/></div>
                                    <div>Experience: <field name="has_experience"/></div>
                                    <div>Avatar: <field name="avatar"/></div>
                                    <div>Logo: <field name="logo"/></div>
                                    <div>Introduce: <field name="introduce"/></div>
                                    <div>Currency: <field name="currency_id"/></div>
                                    <div>Class Fund: <field name="class_fund"/></div>
                                    <div>Birth Day: <field name="date_of_birth"/></div>
                                    <div>Time Start: <field name="attendance_time_start"/></div>
                                    <div>Order: <field name="order_lines"/></div>
                                    <div>Score: <field name="total_score"/></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_student_test_calendar" model="ir.ui.view">
            <field name="name">student.test.calendar</field>
            <field name="model">student.test</field>
            <field name="type">calendar</field>
            <field name="arch" type="xml">
                <calendar date_start="date_start" date_stop="date_end" color="project_id" __validate__="1">                     
                    <field name="name" string="Student Name"/>                    
                </calendar>            
            </field>
        </record>

        <record id="view_student_test_graph" model="ir.ui.view">
            <field name="name">student.test.graph</field>
            <field name="model">student.test</field>
            <field name="arch" type="xml">
                <graph type="bar">
                    <field name="code" string="Student code"/>
                    <field name="name" string="Student Name"/>
                </graph>
            </field>
        </record>

        <record id="view_student_test_search" model="ir.ui.view">
            <field name="name">student.test.search</field>
            <field name="model">student.test</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search>
                    <field name="code" string="Student code"/>
                    <field name="name" string="Student Name"/>
                    <field name="age" string="Age"/>
                    <field name="gender" string="Gender"/>
                    <field name="address"/>
                    <field name="ranking"/>                    
                </search>
            </field>
        </record>    

        <record id="action_student_test" model="ir.actions.act_window">
            <field name="name">Test</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student.test</field>
            <field name="view_mode">tree,form,kanban,calendar,graph</field>
        </record>
    </data>

    <menuitem   id="menu_student_test"
                    name="Test"
                    action="action_student_test"
                    parent="menu_student_root"
                    sequence="3"/>
</odoo>
