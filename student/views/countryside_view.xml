<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_countryside_tree" model="ir.ui.view">
        <field name="name">countryside.tree</field>
        <field name="model">countryside</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>                
                <field name="name" string="Countryside Name"/>
                <field name="code" string="Countryside code"/>
                <field name="province"/>                
            </tree>
        </field>
    </record>

    <record id="view_countryside_form" model="ir.ui.view">
        <field name="name">countryside.form</field>
        <field name="model">countryside</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="Countryside Name"/>
                        <field name="code" string="Countryside code"/>
                        <field name="province"/> 
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_countryside_search" model="ir.ui.view">
        <field name="name">countryside.search</field>
        <field name="model">countryside</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Countryside Name"/>
                <field name="code" string="Countryside code"/>
                <field name="province"/> 
            </search>
        </field>
    </record>

    <record id="view_countryside_kanban" model="ir.ui.view">
        <field name="name">countryside.kanban</field>
        <field name="model">countryside</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name" string="Countryside Name"/>
                <field name="code" string="Countryside code"/>
                <field name="province"/> 
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_card_header">
                                <div class="oe_kanban_card_title">
                                    Countryside: <field name="name"/>
                                </div>
                                <div class="oe_kanban_card_subtitle">
                                    Code: <field name="code"/>
                                </div>
                                <div class="oe_kanban_card_content">
                                    Province: <field name="province"/>                                    
                                </div>                                                                
                            </div>                            
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_countryside" model="ir.actions.act_window">
        <field name="name">Countryside</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">countryside</field>
        <field name="view_mode">tree,form,kanban,search</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first countryside !
            </p>
        </field>    
    </record>

    

</odoo>