<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_student_tree" model="ir.ui.view">
        <field name="name">student.tree</field>
        <field name="model">student</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="code" string="Student code"/>
                <field name="name" string="Student Name"/>
                <field name="age" string="Age"/>
                <field name="gender" string="Gender"/>
                <field name="address"/>
                <field name="ranking"/>
                <field name="has_experience"/>
            </tree>
        </field>
    </record>

    <record id="view_student_form" model="ir.ui.view">
        <field name="name">student.form</field>
        <field name="model">student</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="code" string="Student code"/>
                            <field name="name" string="Student Name"/>
                            <field name="age" string="Age"/>
                            <field name="has_experience"/>
                        </group>
                        <group>
                            <field name="gender" string="Gender"/>
                            <field name="address"/>
                            <field name="ranking"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_student_search" model="ir.ui.view">
        <field name="name">student.search</field>
        <field name="model">student</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="code" string="Student code"/>
                <field name="name" string="Student Name"/>
                <field name="age" string="Age"/>
                <field name="gender" string="Gender"/>
                <field name="address"/>
                <field name="ranking"/>
                <field name="has_experience"/>
            </search>
        </field>
    </record>

    <record id="view_student_kanban" model="ir.ui.view">
        <field name="name">student.kanban</field>
        <field name="model">student</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="code" string="Student code"/>
                <field name="name" string="Student Name"/>
                <field name="age" string="Age"/>
                <field name="gender" string="Gender"/>
                <field name="address"/>
                <field name="ranking"/>
                <field name="has_experience"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_card_header">
                                <div class="oe_kanban_card_title">
                                    Name: <field name="name"/>
                                </div>
                                <div class="oe_kanban_card_subtitle">
                                    Code: <field name="code"/>
                                </div>
                            </div>
                            <div class="oe_kanban_card_content">
                                <div>Age: <field name="age" string="age"/></div>
                                <div>Gender: <field name="gender" string="gender"/></div>
                                <div>Andress: <field name="address"/></div>
                                <div>Ranking: <field name="ranking"/></div>
                                <div>Experience: <field name="has_experience"/></div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student</field>
        <field name="view_mode">tree,form,kanban,search</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first student !
            </p>
        </field>    
    </record>
    
        <menuitem   id="menu_student_root"
                    name="Student"                                   
                    sequence="0"/>

        <menuitem   id="menu_student"
                    action="action_student"
                    parent="menu_student_root"                                   
                    sequence="0"/>

        <menuitem   id="menu_school"
                    name="School"
                    action="action_school"
                    parent="menu_student_root"
                    sequence="1"/>

        <menuitem   id="menu_city"
                    name="City"
                    action="action_city"
                    parent="menu_student_root"
                    sequence="2"/>

        <menuitem   id="menu_countryside"
                    name="Countryside"
                    action="action_countryside"
                    parent="menu_student_root"
                    sequence="3"/>
        
        <menuitem   id="menu_language"
                    name="Language"
                    action="action_language"
                    parent="menu_student_root"
                    sequence="4"/>

</odoo>