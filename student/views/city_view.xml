<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_city_tree" model="ir.ui.view">
        <field name="name">city.tree</field>
        <field name="model">city</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>                
                <field name="name" string="City Name"/>
                <field name="country" string="Country"/>
            </tree>
        </field>
    </record>

    <record id="view_city_form" model="ir.ui.view">
        <field name="name">city.form</field>
        <field name="model">city</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="City Name"/>
                        <field name="country" string="Country"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_city_search" model="ir.ui.view">
        <field name="name">city.search</field>
        <field name="model">city</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="City Name"/>
                <field name="country" string="Country"/>
            </search>
        </field>
    </record>

    <record id="view_city_kanban" model="ir.ui.view">
        <field name="name">city.kanban</field>
        <field name="model">city</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name" string="City Name"/>
                <field name="country" string="Country"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_card_header">
                                <div class="oe_kanban_card_title">
                                    <field name="name"/>
                                </div>
                                <div class="oe_kanban_card_subtitle">
                                    <field name="country"/>
                                </div>
                            </div>                            
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_city" model="ir.actions.act_window">
        <field name="name">City</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">city</field>
        <field name="view_mode">tree,form,kanban,search</field>        
        <field name="context">{}</field>        
    </record>

    

</odoo>