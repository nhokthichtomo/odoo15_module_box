<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_superbox_box_tree" model="ir.ui.view">
        <field name="name">superbox.box.tree</field>
        <field name="model">superbox.box</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Box Name"/>
                <field name="size"/>
                <field name="type"/>
                <field name="quantity"/>
            </tree>
        </field>
    </record>

    <record id="view_superbox_box_form" model="ir.ui.view">
        <field name="name">superbox.box.form</field>
        <field name="model">superbox.box</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                        <field name="name"/>
                        <field name="size"/>                        
                        </group>
                        <group>                        
                        <field name="type"/>
                        <field name="quantity"/>
                    </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_superbox_box_search" model="ir.ui.view">
        <field name="name">superbox.box.search</field>
        <field name="model">superbox.box</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Box Name"/>
                <field name="size"/>
                <field name="type"/>
                <field name="quantity"/>
            </search>
        </field>
    </record>

    <record id="action_superbox_box" model="ir.actions.act_window">
        <field name="name">Box</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">superbox.box</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first box!
            </p>
        </field>
    </record>

    

</odoo>